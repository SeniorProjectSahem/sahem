<p id="notice"><%= notice %></p>

<h1>Listing Pricings</h1>

<table>
  <thead>
    <tr>
      <th>Daily price</th>
      <th>Monthly price</th>
      <th>Yearly price</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pricings.each do |pricing| %>
      <tr>
        <td><%= pricing.daily_price %></td>
        <td><%= pricing.monthly_price %></td>
        <td><%= pricing.yearly_price %></td>
        <td><%= pricing.item %></td>
        <td><%= link_to 'Show', pricing %></td>
        <td><%= link_to 'Edit', edit_pricing_path(pricing) %></td>
        <td><%= link_to 'Destroy', pricing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

