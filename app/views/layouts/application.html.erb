<!DOCTYPE html>
<html>
<head>
  <title>Sahem</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
		<div class ="container-fluid">
			
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">   <!-- When this is pressed it targets the below navHeaderCollapse -->
					<span class="icon-bar"></span>   <!-- For having the collapsed 3-line button -->
					<span class="icon-bar"></span>	
					<span class="icon-bar"></span>		
				</button>	
				
				  <!--Logo-->
				  <a class="navbar-brand" href="#">
				    <%= image_tag "logotransparent.png", height:'100%' %>
				  </a>

			</div>
			
			
			<div class="collapse navbar-collapse navHeaderCollapse" id="myNavbar">
				<ul class="nav navbar-nav navbar-right">
					<li><a href="#home">Home</a></li>
					<li><a href="/items">Items</a></li>
					<li><a href="#faq">FAQ</a></li>
					<li><a href="#about">About</a></li>
					<li><a href="#contact">Contact</a></li>
					<li><a href="#login">Log In</a></li>
					
				</ul>
			</div>
			
	  <div class="row">
		  <div class="col-md-5ths col-sm-5ths grey">
		  </div>
		</div>
			
		</div>
    </nav>
    
    <div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-12">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: "alert alert-#{name}" %>
          <% end -%>
        </div>
        <div class="col-xs-9">
          <%= yield %>
        </div>
      </div>
    </div>
    
  </body>
</html>
